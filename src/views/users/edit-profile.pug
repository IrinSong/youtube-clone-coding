extends ../layout

block navLink
  li 
    a(href="/") Home
  li
    a(href="/search") Search

block content 
  form(method="POST", enctype="multipart/form-data")
    label(for="avatar") Avatar
    img(src= "/" + loggedInUser.avatarUrl, width="100", height="100")
    input(type="file", name="avatar", id="avatar", accept="image/*")
    input(type="text", name="name", placeholder="Name", value=loggedInUser.name, required)
    input(type="email", name="email", placeholder="E-mail", value=loggedInUser.email, required)
    input(type="text", name="location", placeholder="Location", value=loggedInUser.location)
    input(type="submit", value="Update Profile")
    if !loggedInUser.socialAccount
      hr
      a(href="change-password") Change Password &rarr;